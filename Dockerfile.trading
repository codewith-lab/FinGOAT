FROM python:3.11-slim

WORKDIR /app
ENV PYTHONPATH=/app:/app/TradingAgents

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    && rm -rf /var/lib/apt/lists/*

# Copy TradingAgents submodule
COPY TradingAgents /app/TradingAgents

# Copy langchain-v1 service files
COPY langchain-v1/requirements.txt .
COPY langchain-v1/*.py .

# Install Python dependencies
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt

# Install TradingAgents in editable mode
RUN pip install -e /app/TradingAgents

EXPOSE 8001

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
    CMD python -c "import requests; requests.get('http://localhost:8001/health')"

CMD ["uvicorn", "trading_service:app", "--host", "0.0.0.0", "--port", "8001", "--log-level", "info"]
